<% include ../partials/header %>

<div class='ui main container'>
    <div class='ui huge header'>
        <h2>Edit your comment to: <%= blog.title %></h2>
    </div>
    <form class='ui form' action='/blog/<%= blog._id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
        <div class='field'>
            <label for='comment'>Edit your comment here:</label>
            <textarea id='comment' name='comment[text]' placeholder='comment'><%= comment.text %></textarea>
        </div>
        <button class="ui green basic button" type="submit">Edit your comment!</button>
    </form>
</div>

<% include ../partials/footer %>