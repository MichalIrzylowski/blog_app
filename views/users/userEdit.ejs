<% include ../partials/header %>

<div class="ui main container">
    <h1>Sign up!</h1>
    <form class="ui form segment" action="/user/<%= user._id %>?_method=PUT" method="POST">
        <div class=field>
            <label for="firstName">First Name</label>
            <input type="text" name="firstName" id="firstName" placeholder="first name" value="<%= user.firstName %>">
        </div>
        <div class=field>
            <label for="lastName">Last Name</label>
            <input type="text" name="lastName" id="lastName" placeholder="last name" value="<%= user.lastName %>">
        </div>
        <div class=field>
            <label for="enail">e-mail</label>
            <input type="email" name="email" id="email" placeholder="michal@irzylowski.com" value="<%= user.email %>">
        </div>
        <div class=field>
            <label for="avatar">Avatar</label>
            <input type="text" name="avatar" id="avatar" placeholder="avatar url" value="<%= user.avatar %>">
        </div>
        <button class="ui blue orange button" type="submit">Edit!</button>
    </form>
</div>

<% include ../partials/footer %>