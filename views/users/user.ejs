<% include ../partials/header %>

    <div class="ui main container">
        <div class="ui card">
            <div class="image">
                <img src="<%= user.avatar %>">
            </div>
            <div class="content">
                <a class="header"><%= user.firstName %> <%= user.lastName %></a>
                <div class="meta">
                    <span class="date"><%= user.joined.toDateString() %></span>
                </div>
                <div class="description">
                    email: <%= user.email %>
                </div>
            </div>
            <a class="ui orange basic button" href="/user/<%= user._id %>/edit">Edit</a>
        </div>
    </div>

<% include ../partials/footer %>