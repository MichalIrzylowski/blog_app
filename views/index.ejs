<% include ./partials/header %>

<div class="ui main text container">
    
    <div class="ui huge header"><h1>Blog MI</h1></div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% for (var i = blogs.length - 1; i >= 0; i--) { %>
                <div class="item">
                    <div class="image"><img src="<%= blogs[i].image %>"></div>
                    <div class="content">
                        <a class="header" href="/blog/<%= blogs[i]._id %>"><%= blogs[i].title %></a>
                        <div class="meta">
                            <span><%= blogs[i].created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blogs[i].body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blog/<%= blogs[i]._id %>">
                                Read More!
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }; %>
        </div>
    </div>
</div>



<% include ./partials/footer %>